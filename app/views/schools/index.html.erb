<h1>Schools</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.address %></td>
        <td><%= school.email %></td>
        <td><%= school.phone %></td>
        <td><%= school.website %></td>
        <td><%= link_to 'Show', school %></td>
        <% if can?(:edit, school)%>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <% end %>
        <% if can?(:destroy, School)%>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can?(:new, School)%>
  <%= link_to 'New School', new_school_path, class: "btn btn-primary" %>
<% end %>
