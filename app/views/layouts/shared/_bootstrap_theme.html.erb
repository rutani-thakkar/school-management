  <div class="col-auto col-md-2 col-xl-2 px-sm-2 px-0 bg-dark">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
      <hr>
      <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
        <li class="nav-item">
          <%= link_to "/", class: "nav-link align-middle px-0" do %>
            <i class="fs-4 bi-house"></i>
            <span class="ms-1 d-none d-sm-inline">Home</span>
          <% end %>
        </li>
        <% if can?(:students_list, User)%>
          <li>
            <a href="<%= students_list_users_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline"> Students</span>
            </a>
          </li>
        <% end %>
        <% if can?(:school_admin_list, User)%>
          <li>
            <a href="<%= school_admin_list_users_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline"> School Admin</span>
            </a>
          </li>
        <% end %>
        <% if can?(:index, School)%>
          <li>
            <a href="<%= schools_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline"> Schools</span>
            </a>
          </li>
        <% end %>

        <% if can?(:index, Enrollment)%>
          <li>
            <a href="<%= enrollments_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline">Enrollment Requests</span>
            </a>
          </li>
        <% end %>

      </ul>
      <ul class="nav nav-pills" id="menu">
        <li>
          <a href="<%= destroy_user_session_path %>" class="nav-link px-0 align-middle">
            <% if user_signed_in? %>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to 'Login', new_user_session_path %>
            <% end %>
          </a>
        </li>
      </ul>
      <hr>
    </div>
  </div>
